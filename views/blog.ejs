<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogify | Blog</title>
    <style>
        body {
            background-color: #141414;
            color: #fff;
            font-family: 'Helvetica Neue', sans-serif;
            margin: 0;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 2rem;
            background-color: #1c1c1c;
            border-radius: 12px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        img {
            display: block;
            max-width: 100%;
            margin: 0 auto 20px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        }

        h4 {
            font-size: 1.2rem;
            line-height: 1.8;
            margin-bottom: 2rem;
        }

        .author {
            color: #bbb;
            text-align: right;
            font-size: 1rem;
            margin-bottom: 20px;
        }

        .comment-section {
            border-top: 1px solid #333;
            margin-top: 3rem;
            padding-top: 2rem;
        }

        .comment {
            background-color: #2c2c2c;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 8px;
        }

        .comment-author {
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #e50914;
        }

        .comment-content pre {
            white-space: pre-wrap;
            color: #ddd;
        }

        .comment-form input {
            padding: 10px;
            border: none;
            border-radius: 4px;
            width: 75%;
            background-color: #333;
            color: white;
        }

        .comment-form button {
            padding: 10px 15px;
            background-color: #e50914;
            border: none;
            border-radius: 4px;
            color: white;
            margin-left: 10px;
            cursor: pointer;
        }

        .comment-form button:hover {
            background-color: #f40612;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="Cover Image">
        <h4><%= blog.body %></h4>
        <div class="author">Author: <%= blog.createdBy.fullName %></div>

        <div class="comment-section">
            <h2>Comments (<%= comments.length %>)</h2>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form">
                    <input type="text" name="content" placeholder="Enter your comment..." required />
                    <button type="submit">Add</button>
                </form>
            <% } %>

            <% comments.forEach(comment => { %>
                <div class="comment">
                    <div class="comment-author"><%= comment.createdBy.fullName %></div>
                    <div class="comment-content">
                        <pre><%= comment.content %></pre>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
