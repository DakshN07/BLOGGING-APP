<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head') %>
    <title>Blogify | Blogs</title>
</head>
<body>
    <%-include('./partials/nav') %>
<div class="container mt-4">
    <h1 style="font-family: 'Times New Roman', Times, serif;"> <%= blog.title %> </h1>
    <img style="border: black 5px;" src="<%= blog.coverImageURL %>" width="400px" />
    <pre style="font-family: Arial, Helvetica, sans-serif;" class="mt-4"><%= blog.body %></pre>


    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px"/> <%= blog.createdBy.fullName %>
    </div>
</div>

    <div class="container mt-3">
        <h1>Comments <%= comments.length %> </h1>
        <% if (locals.user) { %>
            <form action = "/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name = "content" placeholder="Enter Your Comment"/>
                    <button class="btn btn-sm btn-primary mt-1" type="submit">Add</button>
                </div>
            </form>
        <% } %>
    </div>
    <div class="mt-3">
        <% comments.forEach(comment =>{ %>
            <div style="margin-left: 20px;">
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" /> <%= comment.createdBy.fullName %>: <pre> <%= comment.content %> </pre>

            </div>
        <% }) %>
    </div>
    <%-include('./partials/scripts') %>
</body>
</html>